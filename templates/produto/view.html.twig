{% extends "base.html.twig" %}
{% block title %}Visualização Produto - {% endblock %}

{% block body %}
    
    <h1 class="mb-5">Visualização Produto - <small>{{ produto.nome }}</small></h1>
    
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Cod.</th>
                <td>{{ produto.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ produto.nome }}</td>
            </tr>
            <tr>
                <th>Preço</th>
                <td>{{ produto.preco }}</td>
            </tr>
            <tr>
                <th>Descrição</th>
                <td>{{ produto.descricao }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('listar_produto') }}" class="btn btn-primary btn-lg mt-4 mb-4">Início</a>

{% endblock %}